fabric {
    plugin_versions = {
        "blackstork/openai" = ">= 0.4 < 1.0 || 0.4.0-rev0"
    }
}

document "example" {
    title = "Testing plugins"
   
    data csv "csv_file" {
        path = "./data.csv"
    }
    content title {
        value = "Values from the CSV file"
    }
    content table {
        query = ".data.csv.csv_file"
        columns = [
            {
                "header" = "ID"
                "value"  = "ID:{{.id}}"
            },
            {
                "header" = "Active"
                "value"  = "{{.active}}"
            },
            {
                "header" = "Name"
                "value"  = "{{.name}}"
            },
            {
                "header" = "Age"
                "value"  = "{{.age}}"
            },
            {
                "header" = "Height"
                "value"  = "{{.height}}"
            }
        ]
    }
    content openai_text {
        config {
            api_key = from_env_variable("OPENAI_API_KEY")
        }
        query = ".data.csv.csv_file"
        model = "gpt-3.5-turbo"
        prompt = "Decribe each user in a sentence"
    }
}